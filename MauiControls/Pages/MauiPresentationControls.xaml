<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiControls.Pages.MauiPresentationControls"
             Title="Maui Presentation Controls">
    <ScrollView>
        <VerticalStackLayout>

            <Label Text="Este texto será exibido em caixa baixa."
                   FontSize="Large"
                   TextTransform="Lowercase" />


            <Label Text="Este é um texto HTML &lt;strong style=&quot;color:red"
                   FontSize="Large"
                   TextColor="Black" 
                   BackgroundColor="Yellow"
                   TextType="Html" />

            <Label Text="Texto sublinhado"
                FontSize="Large"
                TextDecorations="Underline" />
                <Label Text="Texto sublinhado"
                 FontSize="Large"
                TextDecorations="Strikethrough" />
                <Label Text="Texto sublinhado"
                 FontSize="Large"
                TextDecorations="Underline,Strikethrough" />

            <Ellipse Fill="Yellow"
                     Stroke="Blue"
                     StrokeThickness="10"
                     HeightRequest="80"
                     WidthRequest="150"
                     HorizontalOptions="Center"/>

            <Line Stroke="Black"
                  X1="0"
                  Y1="0"
                  X2="300"
                  Y2="50"
                  StrokeThickness="5"/>

            <Rectangle Fill="Green"
                    Stroke="Black"
                    StrokeThickness="5"
                    HeightRequest="150"
                    WidthRequest="150"/>


            <BoxView Color="CornflowerBlue"></BoxView>


                <Border Stroke="#C49B33"
                        StrokeThickness="4"
                        StrokeShape="RoundRectangle 40,0,0,40"
                        Background="#2B0B98"
                        Padding="16,8"
                        HorizontalOptions="Center">
                    <Label Text="Bem-Vindo ao .NET MAUI" TextColor="White" FontSize="8" FontAttributes="Bold"/>

                </Border>

                <Image Source="dotnet_bot.png"
                   Aspect="AspectFit"
                   />

                <Image Source="https://macoratti.net/macoratti.gif"
                       Aspect="AspectFit"
                       HeightRequest="400"
                       WidthRequest="400"
                       />
                <Frame CornerRadius="200">
                    <Image Source="dotnet_bot.png"/>
                </Frame>


                <Frame BorderColor="Gray"
                       CornerRadius="10"
                       Padding="8">
                <StackLayout>
                    <Label Text="Exemplo Card"
                        FontSize="30"
                        FontAttributes="Bold"/>
                    <BoxView Color="Gray"
                         HeightRequest="2"
                         HorizontalOptions="Fill" />
                    <Label
                        Text="Usando Frame e StackLayout"
                        FontSize="20"/>

                </StackLayout>
            </Frame>


            <WebView HeightRequest="500"
                 Source="https://macoratti.net"/>



        </VerticalStackLayout>
    </ScrollView>
</ContentPage>